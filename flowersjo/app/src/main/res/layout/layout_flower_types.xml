<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:background="@color/colorPrimaryDark"    android:divider="?android:dividerHorizontal"    android:showDividers="middle"    >    <androidx.cardview.widget.CardView        android:layout_width="match_parent"        android:layout_height="100dp"        android:layout_marginLeft="5dp"        android:layout_marginRight="5dp"        android:layout_marginBottom="5dp"        app:cardElevation="0dp"        android:elevation="100dp"        >        <RelativeLayout            android:id="@+id/relativeLayout"            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:background="@color/colorPrimaryDark"            >            <ImageView                android:id="@+id/imageVM"                android:layout_margin="15dp"                android:layout_width="70dp"                android:layout_height="70dp"                android:gravity="left"                android:src="@drawable/index"/>            <TextView                android:id="@+id/flower_title"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginLeft="100dp"                android:layout_marginTop="20dp"                android:fontFamily="@font/comfortaa_light"                android:gravity="left"                android:textColor="@color/colorPrimary"                android:textSize="20dp" />            <ImageView                android:id="@+id/arrow_product_imageview"                android:layout_width="25dp"                android:layout_alignParentRight="true"                android:gravity="right"                android:layout_height="25dp"                android:src="@drawable/arrow_white2"                android:layout_marginTop="35dp"                android:layout_marginBottom="35dp"                android:layout_marginRight="15dp"                />            <TextView                android:id="@+id/descriptionVM"                android:layout_width="wrap_content"                android:layout_height="40dp"                android:layout_marginLeft="100dp"                android:layout_marginTop="45dp"                android:fontFamily="@font/comfortaa_light"                android:textSize="15dp"                android:text="PRICE" />        </RelativeLayout>    </androidx.cardview.widget.CardView>    <View        android:layout_width="match_parent"        android:layout_height="1dp"        android:background="#d3d3d3"/></LinearLayout>