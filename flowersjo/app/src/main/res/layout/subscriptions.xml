<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_height="250dp">


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/sliding_tabs"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab_selector"
                app:tabIndicatorHeight="0dp"
                app:tabGravity="center"
                />
        </androidx.viewpager.widget.ViewPager>

            <View

                style="@style/Divider.Horizontal.Subs"
                android:layout_marginTop="30dp"

                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/comfortaa_light"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="1 month subscription"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/comfortaa_light"
            android:text="here will go the description of this subscription and how it works, also the kind of flowers that will be sent to the customer weekly"
            />


            <CheckBox
                android:id="@+id/month1sub"
                android:buttonTint="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:text="150 JOD"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/comfortaa_light"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_alignParentBottom="true"

                android:layout_height="match_parent">

                <Button
                    android:id="@+id/subscribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/mybutton"
                    android:fontFamily="@font/comfortaa_light"
                    android:gravity="center"
                    android:text="SUBSCRIBE"
                    android:textSize="20dp" />

            </RelativeLayout>

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>