<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"

                >
                <ImageView
                    android:id="@+id/imageCart"
                    android:layout_margin="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="left"
                    android:src="@drawable/index"/>






                <TextView
                    android:id="@+id/timeanddate"
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="45dp"
                    android:text="time + date"
                    android:fontFamily="@font/comfortaa_light" />
                <TextView
                    android:id="@+id/orderid"
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="65dp"
                    android:textSize="12dp"
                    android:text="orderID: "
                    android:fontFamily="@font/comfortaa_light" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#d3d3d3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/comfortaa_light"
                android:text="Details:"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:id="@+id/given_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="15dp"
                android:text="the name"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/given_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="15dp"
                android:text="forexample@gmail.com"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/given_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="15dp"
                android:text="0791302992"
                android:layout_marginLeft="20dp"
                />

            <TextView
                android:id="@+id/given_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="15dp"
                android:text="bulding number, street"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/given_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaa_light"
                android:textSize="15dp"
                android:text="Amman"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                />
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#d3d3d3"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>